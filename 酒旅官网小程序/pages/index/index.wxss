.icon-container {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}
.function-buttons {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}
.button {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.button image {
  width: 80rpx;
  height: 80rpx;
}
.theme-selection {
  padding: 20rpx;
  margin: 10rpx 0;
}

.section-title {
  display: block;
  text-align: center;
  margin: 25rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  letter-spacing: 2rpx;
}
.theme-scroll-view {
  width: 100%;
  padding: 10rpx 0 30rpx 0;
  -webkit-overflow-scrolling: touch; /* 优化iOS滑动体验 */
}

.theme-item-wrapper {
  display: flex;
  padding: 0 10rpx;
}

.theme-item {
  width: 300rpx;
  height: 300rpx;
  margin: 0 12rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
  flex-shrink: 0;
  background-color: #f5f5f5; /* 图片加载前的背景 */
}

.theme-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.theme-image {
  width: 100%;
  height: 100%;
  transition: transform 0.5s ease;
}

.theme-item:active .theme-image {
  transform: scale(1.05);
}

.theme-item-text {
  padding: 12rpx 16rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 60%, transparent 100%);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 适配不同屏幕尺寸 */
@media screen and (max-width: 375px) {
  .theme-item {
    width: 280rpx;
    height: 280rpx;
  }
}
