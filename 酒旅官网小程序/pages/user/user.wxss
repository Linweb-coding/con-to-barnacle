.header {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 350rpx;
  background-color: #ffc107;
  flex-direction: column; /* 改为垂直排列 */
}
.avatar-container {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50rpx;
  overflow: hidden;
  margin-bottom: 10rpx; /* 增加头像与文字的间距 */
}
.avatar {
  width: 100%;
  height: 100%;
}
.login-text {
  color: white;
  font-size: 40rpx;
}
.order{
  /* background-color: violet; */
  height: 80rpx;
  border-bottom: 1px solid #e0e0e0 ;
}
.order-title{
  font-size: 32rpx;
  color: #333;
  margin-left: 30rpx;
}
.order-section {
  padding: 30rpx;
  
}
.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  /* bottom: 1px soild black; */
}
.order-status-container {
  display: flex;
  justify-content: space-between; /* 从space-around改为space-between */
  flex-wrap: wrap; /* 允许图标换行，防止溢出 */
}
.order-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10rpx; /* 增加右间距 */
  margin-bottom: 10rpx; /* 增加下间距 */
}
.icon-container {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  position: relative; /* 添加相对定位 */
}
.icon {
  width: 100%;
  height: 100%;
}
.badge {
  width: 34rpx;
  height: 34rpx;
  background-color: white;
  color: orange;
  text-align: center;
  line-height: 24rpx;
  border-radius: 20rpx;
  border: solid;
  position: absolute;
  top: 0;
  right: 0;
}
.status-text {
  font-size: 28rpx;
  color: #333;
}

.message-section {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}
.message-badge {
  width: 24rpx; /* 缩小红点宽度 */
  height: 24rpx; /* 缩小红点高度 */
  margin-left: 5rpx; /* 调整红点左侧间距 */
  background-color: red;
  color: white;
  text-align: center;
  line-height: 24rpx;
  border-radius: 12rpx;
}

.subscription-section,
.form-section,
.collection-section {
  padding: 20rpx;
  border-bottom: 1px solid #e0e0e0;
}

.phone-section {
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.phone-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.phone-number {
  font-size: 30rpx;
  color: #333;
}

.logout-button {
  padding: 10rpx 20rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  margin: 20rpx;
  background-color: white;
  color: #333;
  font-size: 30rpx;
}
/* 图标 */
.contact-buttons {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
}
.contact-button {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.2);
}
.contact-button image {
  width: 50%;
  height: 50%;
} 