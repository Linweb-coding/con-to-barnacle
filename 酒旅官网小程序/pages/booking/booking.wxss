.container {
  padding: 10px;
}
.tab-bar {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #ccc;
  margin-bottom: 10px;
}
.tab-item {
  padding: 5px 10px;
  cursor: pointer;
}
.active {
  color: orange;
  border-bottom: 2px solid orange;
}
.content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.item {
  width: 48%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ccc;
  border-radius: 5px;
  overflow: hidden;
}
/* 添加图片容器高度和其他样式优化 */
.item image {
  width: 100%;
  height: 150px;  /* 添加固定高度 */
  object-fit: cover;  /* 保持图片比例并覆盖容器 */
}
.title {
  padding: 5px;
  font-size: 16px;
  color: black;
}
.price {
  padding: 0 5px;
  color: orange;
  font-size: 17px;
}
.booked {
  padding: 0 5px;
  color: gray;
  font-size: 14px;
}
/* 图标 */
.contact-buttons {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
}
.contact-button {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.2);
}
.contact-button image {
  width: 50%;
  height: 50%;
} 