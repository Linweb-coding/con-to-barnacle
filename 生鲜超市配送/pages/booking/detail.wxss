.goods-img {
  width: 100%;
  height:450rpx;
  /* 添加边距 */
  /* margin: 20rpx;  */
  box-sizing: border-box;
}

.goods-info {
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.goods-title {
  font-size: 32rpx;
  font-weight: bold;
  /* 确保标题单独一行 */
  display: block; 
}

.goods-desc {
  margin-top: 10rpx;
  color: #666;
  /* 确保描述单独一行 */
  display: block; 
}

.price-area {
  margin-top: 15rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 25rpx;
  color: #f00;
}

.reserve-info {
  color: #999;
}

.service-title {
  margin-top: 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  border-left: 6rpx solid #f00;
  padding-left: 20rpx;
}

.service-desc {
  margin-top: 15rpx;
  line-height: 1.6;
  color: #333;
}

.btn-area {
  margin-top: 26rpx;
  display: flex;
  justify-content: space-around;
}
.scroll-container {
  height: calc(100vh - 120rpx); /* 计算高度，减去底部按钮区域的高度 */
  overflow-y: auto;
  box-sizing: border-box;
}
.fixed-btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-around;
  z-index: 100; /* 确保在最上层 */
}

.phone-btn {
  background-color: #fff;
  color: #000;
  border: 3rpx solid #ccc;
}

.reserve-btn {
  background-color: #f00;
  color: #fff;
}