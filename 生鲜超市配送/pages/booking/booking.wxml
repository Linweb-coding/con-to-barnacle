<!-- 顶部分类 tabs -->
<view class="tabs">
  <view 
    wx:for="{{['全部', '肉类', '水果', '蔬菜']}}" 
    wx:key="index" 
    class="tab-item {{currentTab === index ? 'active' : ''}}"
    bindtap="switchTab"
    data-index="{{index}}"
  >
    {{item}} <!-- 显示 tab 文字 -->
  </view>
</view>

<!-- 商品列表 -->
<view class="goods-list">
  <block wx:for="{{goodsList[currentTab]}}" wx:key="id">
    <view class="goods-item">
      <!-- 促销标签 -->
      <view class="tag" wx:if="{{item.tag}}">{{item.tag}}</view>
      
      <!-- 商品图片 -->
      <image class="goods-img" src="{{item.image}}" mode="widthFix"></image>
      
      <!-- 商品信息 -->
      <view class="goods-info">
        <view class="goods-title">{{item.title}}</view>
        <view class="goods-desc">{{item.desc}}</view>
        
        <!-- 价格和销售信息 -->
        <view class="price-group">
          <view>
            <text class="current-price">¥{{item.price}}</text>
            <text class="original-price" wx:if="{{item.originalPrice}}">¥{{item.originalPrice}}</text>
          </view>
          <text class="sales-info">已预约：{{item.reserved}} 剩余：{{item.remaining}}</text>
        </view>
        
        <!-- 立即预约按钮 -->
        <button class="reserve-btn" bindtap="handleReserve" data-id="{{item.id}}">立即预约</button>
      </view>
    </view>
  </block>
</view>
