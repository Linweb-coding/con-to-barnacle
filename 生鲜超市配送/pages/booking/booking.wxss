/* 顶部 tabs 样式 */
.tabs {
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
}

.tab-item.active {
  color: #e61616;
  border-bottom: 2px solid #f70b0b;
}

/* 商品列表 */
.goods-list {
  padding: 16rpx;
  margin-top: 120rpx;
}
.goods-item {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 36rpx;
  position: relative;
}

/* 促销标签 */
.tag {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
  z-index: 1;
}

/* 商品图片 */
.goods-img {
  width: 100%;
  height: 400rpx; /* 减小图片高度 */
  display: block;
  border-radius: 16rpx 16rpx 0 0; /* 圆角 */
}

/* 商品信息区 */
.goods-info {
  padding: 26rpx;
  position: relative; /* 为按钮定位 */
}
.goods-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.goods-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 价格和销售信息 */
.price-group {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.current-price {
  font-size: 32rpx;
  color: #ff5722;
  font-weight: bold;
}
.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 12rpx;
}
.sales-info {
  font-size: 26rpx;
  color: #999;
  margin-left: auto; /* 靠右对齐 */
}

/* 立即预约按钮 - 移至右下角 */
.reserve-btn {
  position: absolute;
  right: 26rpx;
  bottom: 26rpx;
  background: #cf1d1d;
  color: #fff;
  font-size: 28rpx;
  padding: 18rpx 40rpx;
  border-radius: 60rpx;
  border: none;
  z-index: 10;
}
.reserve-btn::after {
  border: none;
}


