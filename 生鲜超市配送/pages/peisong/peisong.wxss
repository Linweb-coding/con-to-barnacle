.header image {
  width: 750rpx; 
  /* 保持宽高比例，避免拉伸变形 */
  aspect-ratio: auto 1000/450; 
}

.content {
  padding: 30rpx 25rpx;
}

.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.steps {
  padding-left: 20rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.step-number {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #e4393c;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.contact-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.contact-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.contact-info {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
}

.contact-info image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.phone-number {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: 500;
}

.footer {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
}    
.contact-buttons {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
}

.contact-button {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(255, 255, 255, 0.90);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.contact-button image {
  width: 50%;
  height: 50%;
}