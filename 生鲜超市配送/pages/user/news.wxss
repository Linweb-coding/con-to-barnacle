.container {
  padding: 16px;
  background-color: #fff;
}
.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 12px;
}
.message-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.avatar {
  width: 50px;
  height: 50px;
  margin-right: 12px;
  border-radius: 4px;
}
.info .name {
  font-size: 16px;
  margin-bottom: 4px;
}
.info .desc {
  font-size: 14px;
  color: #999;
}
.content {
  font-size: 14px;
  color: #333;
  margin-bottom: 20px;
}
.contact-buttons {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
}

.contact-button {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.contact-button image {
  width: 50%;
  height: 50%;
}