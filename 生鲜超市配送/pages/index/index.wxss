.fresh-market-container {
	position: relative;
	width: 100%;
	overflow: hidden; /* 防止超出容器的内容显示 */
  }
  
  .header {
	position: relative;
	width: 100%;
	height: 750rpx; /* 调整头部高度与背景图等高 */
  }
  
  .bg-img {
	width: 100%; /* 背景图改为100%宽度适配屏幕 */
	height: 100%; /* 撑满父容器高度 */
	object-fit: cover; /* 保持比例并覆盖容器 */
  }
  
  .circle-img {
	position: absolute;
	top: 36%; /* 垂直居中 */
	left: 50%;
	transform: translate(-50%, -50%); /* 精准定位到中心 */
	width: 380rpx; /* 改用rpx单位适配不同屏幕 */
	height: 400rpx;
	border-radius: 50%; /* 圆形图片 */
	box-shadow: 0 0 20rpx rgba(0,0,0,0.2); /* 添加投影效果 */
	z-index: 1; /* 提升层级避免被遮挡 */
  }
  
  .text-img {
	position: absolute;
	bottom: 58%; /* 调整到底部10%位置 */
	left: 50%;
	transform: translateX(-50%); /* 水平居中 */
	width: 270rpx; /* 放大文字图尺寸 */
	height: 80rpx;
  }
  
  .text-container {
	position: absolute;
	top: 36%; /* 垂直居中 */
	left: 50%;
	transform: translate(-50%, -50%); /* 精准定位到中心 */
	text-align: center;
	z-index: 2; /* 确保文字显示在图片上方 */
  }
  
  .image-text {
	color: white; /* 文字颜色 */
	font-size: 42rpx; /* 文字大小 */
	font-weight: bold; /* 文字加粗 */
  }
  
  .image-text1 {
	color: white; /* 文字颜色 */
	font-size: 26rpx; /* 文字大小 */
  }
  .button-overlay {
	position: absolute;
	top: 30%;
	left: 15%;
	width: 70%;
	height: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	padding: 40rpx;
	box-sizing: border-box;
  }
  
  .button-group {
	display: flex;
	justify-content: space-between;
	margin-bottom: 30rpx;
	height: 70rpx;
  }
  
  .button {
	background-color: rgba(255, 255, 255, 0.9);
	border: 1px solid rgba(221, 221, 221, 0.8);
	border-radius: 10rpx;
	padding: 25rpx 15rpx;
	text-align: center;
	font-size: 32rpx;
	width: 45%; /* 调整为45%，留出左右间距 */
	box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
	color: #333;
	box-sizing: border-box; /* 确保内边距和边框不增加总宽度 */
	height: 90rpx;
  }
  .container {
	padding: 10rpx;
  }
  
  .theme-selection {
	padding: 20rpx;
	margin: 10rpx 0;
  }
  
  .section-title {
	display: block;
	text-align: center;
	margin: 25rpx 0;
	font-size: 30rpx;
	font-weight: 600;
	color: #333;
	letter-spacing: 2rpx;
  }
  .theme-scroll-view {
	width: 100%;
	padding: 10rpx 0 30rpx 0;
	-webkit-overflow-scrolling: touch; /* 优化iOS滑动体验 */
  }
  
  .theme-item-wrapper {
	display: flex;
	padding: 0 10rpx;
  }
  
  .theme-item {
	width: 300rpx;
	height: 300rpx;
	margin: 0 12rpx;
	border-radius: 16rpx;
	overflow: hidden;
	box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
	transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
	position: relative;
	flex-shrink: 0;
	background-color: #f5f5f5; /* 图片加载前的背景 */
  }
  
  .theme-item:hover {
	transform: translateY(-4rpx);
	box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
  }
  
  .theme-image {
	width: 100%;
	height: 100%;
	transition: transform 0.5s ease;
  }
  
  .theme-item:active .theme-image {
	transform: scale(1.05);
  }
  
  .theme-item-text {
	padding: 12rpx 16rpx;
	text-align: center;
	font-size: 26rpx;
	font-weight: 500;
	color: white;
	background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 60%, transparent 100%);
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 10;
	word-break: keep-all;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
  }
  
  /* 适配不同屏幕尺寸 */
  @media screen and (max-width: 375px) {
	.theme-item {
	  width: 280rpx;
	  height: 280rpx;
	}
  }
  .fruit-container {
    display: flex;
    padding: 10px;
    border-bottom: 1px solid #f1f1f1;
  }
  .fruit-img {
    width: 120px;
    height: 120px;
    border-radius: 8px;
  }
  .fruit-info {
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .fruit-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 5px;
  }
  .fruit-desc {
    font-size: 14px;
    color: #666;
    margin-bottom: 5px;
  }
  .fruit-price {
    font-size: 14px;
    color: #e60012;
    margin-bottom: 10px;
  }
  .order-btn {
    height: 66rpx;
    text-align: center;
    background-color: #e60012;
    color: #fff;
    font-size: 14px;
    border-radius: 4px;
  }
  /* 精选商品标题 */
  .section-title {
	font-size: 16px;
	font-weight: bold;
	margin: 10px 0;
	text-align: center;
	color: gray;
  }

  /* 精选商品列表 */
  .goods-list {
	border-top: 1rpx solid #eee;
	border-bottom: 1rpx solid #eee;
	border-radius: 20rpx;
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
  }
  .goods-item {
	width: 48%;
	height: 360rpx;
	background-color: #fff;
	margin-bottom: 10px;
	border-radius: 8px;
	padding: 10px;
	box-sizing: border-box;
	text-align: center;
  }
  .goods-img {
	width: 100%;
	height: 200rpx;
	padding: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
	display: inline-block;
  }
  .goods-name {
	font-size: 30rpx;
	display: block;
	margin-bottom: 15rpx;
  }
  .goods-price {
	font-size: 25rpx;
	color: #f00;
  }
  .container {
	width: 97%;
	display: flex;
	flex-direction: column;
	align-items: center;
  }
  .env-img {
	border-top: 1rpx solid #eee;
	width: 97%;
	height: 400rpx;
	padding: 10rpx;
	margin-bottom: 10rpx;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
	display: inline-block;
  }
  .env-desc {
	font-size: 25rpx;
	color: #333;
	margin-top: 8rpx;
  }
  .contact-buttons {
    position: fixed;
    bottom: 40rpx;
    right: 30rpx;
    display: flex;
    flex-direction: column;
  }
  .contact-button {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 30rpx; /* 减小间距，从90rpx改为30rpx */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgba(255, 255, 255, 0.85); /* 添加背景透明度 */
    border-radius: 50%;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .contact-button image {
    width: 50%;
    height: 50%;
  }
